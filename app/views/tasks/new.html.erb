<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h2 class="h4 mb-0">Создание новой задачи</h2>
        </div>
        
        <div class="card-body">
          <%= form_with(model: [current_user, @task], local: true, html: { class: "needs-validation", novalidate: true }) do |f| %>
            <div class="mb-3">
              <%= f.label :title, "Название задачи", class: "form-label required" %>
              <%= f.text_field :title, class: "form-control", required: true %>
              <div class="invalid-feedback">Пожалуйста, укажите название задачи</div>
            </div>

            <div class="mb-3">
              <%= f.label :description, "Описание", class: "form-label" %>
              <%= f.text_area :description, class: "form-control", rows: 4 %>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.label :status, "Статус", class: "form-label required" %>
                <%= f.select :status, Task.statuses.keys.map { |s| [s.humanize, s] }, {}, { class: "form-select", required: true } %>
              </div>

              <div class="col-md-6 mb-3">
                <%= f.label :due_date, "Срок выполнения", class: "form-label" %>
                <%= f.date_field :due_date, class: "form-control" %>
              </div>
            </div>

            <div class="mb-4">
              <%= f.label :category_id, "Категория", class: "form-label" %>
              <%= f.collection_select :category_id, current_user.categories, :id, :name, { include_blank: "Выберите категорию" }, { class: "form-select" } %>
            </div>

            <div class="d-flex justify-content-between">
              <%= link_to "Назад к списку", tasks_path, class: "btn btn-outline-secondary" %>
              <%= f.submit "Создать задачу", class: "btn btn-primary px-4" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .required:after {
    content: " *";
    color: #dc3545;
  }
  
  .card {
    border-radius: 8px;
  }
  
  .form-control:focus, .form-select:focus {
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    border-color: #86b7fe;
  }
  
  .invalid-feedback {
    display: none;
    width: 100%;
    margin-top: 0.25rem;
    font-size: 0.875em;
    color: #dc3545;
  }
  
  .was-validated .form-control:invalid ~ .invalid-feedback,
  .was-validated .form-control:invalid ~ .invalid-feedback {
    display: block;
  }
</style>

<script>
// Валидация формы при отправке
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.getElementsByClassName('needs-validation');
    Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>