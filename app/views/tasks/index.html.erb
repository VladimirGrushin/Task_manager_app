<div class="container mt-5">
  <h1 class="mb-4">Список задач</h1>
  <%= link_to "Новая задача", new_task_path, class: "btn btn-primary mb-3" %>

  <div id="tasks_list">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Название</th>
          <th>Описание</th>
          <th>Статус</th>
          <th>Действия</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr id="task_<%= task.id %>">
            <td><%= task.title %></td>
            <td><%= truncate(task.description, length: 50) %></td>
            <td><%= task.status %></td>
            <td>
              <%= link_to "Просмотр", task, class: "btn btn-sm btn-info" %>
              <%= link_to "Редактировать", edit_task_path(task), class: "btn btn-sm btn-warning" %>
              <%= link_to "Удалить", task_path(task), data: { turbo_method: :delete, turbo_confirm: 'Вы уверены?', turbo: true }, class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
